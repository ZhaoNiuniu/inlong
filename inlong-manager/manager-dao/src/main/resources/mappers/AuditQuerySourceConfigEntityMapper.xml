<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.inlong.manager.dao.mapper.AuditQuerySourceConfigEntityMapper">
    <resultMap id="BaseResultMap" type="org.apache.inlong.manager.dao.entity.AuditQuerySourceConfigEntity">
        <result column="in_use" jdbcType="TINYINT" property="inUse"/>
        <result column="audit_query_source" jdbcType="VARCHAR" property="auditQuerySource"/>
        <result column="hosts" jdbcType="VARCHAR" property="hosts"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="es_auth_enable" jdbcType="TINYINT" property="esAuthEnable"/>
    </resultMap>

    <sql id="Base_Column_List">
        in_use, audit_query_source, hosts, user_name, password, es_auth_enable
    </sql>

    <select id="findByInUse" resultType="org.apache.inlong.manager.dao.entity.AuditQuerySourceConfigEntity"
    resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List"></include>
        from audit_query_source_config
        where in_use = 1 LIMIT 1
    </select>

    <update id="cancelInUse">
        update audit_query_source_config set in_use = 0 where in_use = 1;
    </update>

    <update id="startInUse">
    update audit_query_source_config set in_use = 1 where hosts = #{hosts};
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="hosts">
        insert into audit_query_source_config (in_use, audit_query_source, hosts, user_name, password, es_auth_enable)
        values (#{inUse}, #{auditQuerySource}, #{hosts}, #{userName}, #{password}, #{esAuthEnable})
        ON DUPLICATE KEY UPDATE in_use = VALUES(in_use),
                                audit_query_source = VALUES(audit_query_source),
                                user_name = VALUES(user_name),
                                password = VALUES(password),
                                es_auth_enable = VALUES(es_auth_enable)
    </insert>
</mapper>